<h2 class="text-3xl font-semibold text-center text-blue-600 mb-6">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-white" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mb-4 text-sm text-gray-500">
      Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    </div>
  <% end %>
  
<div class="mb-4">
  <%= f.label :name, class: "block text-sm font-medium text-white"%><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
</div>


  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-white" %>
    <i class="text-sm text-gray-500">(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    <% if @minimum_password_length %>
      <br />
      <em class="text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-white" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :current_password, class: "block text-sm font-medium text-white" %>
    <i class="text-sm text-gray-500">(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="mb-6">
    <%= f.submit "Update", class: "w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>
<% end %>

<h3 class="text-xl font-semibold text-center text-gray-800 mt-8">Cancel my account</h3>

<div class="text-center text-gray-600 mt-4">
  Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-600 hover:text-red-800 focus:outline-none" %>
</div>

<div class="text-center mt-6">
  <%= link_to "Back", :back, class: "text-blue-600 hover:text-blue-800" %>
</div>
