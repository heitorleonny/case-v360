<h2 class="text-2xl font-semibold mb-4">Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource, class: "text-red-600 mb-4" %>

  <div class="field">
    <%= f.label :email, class: "text-sm font-medium text-gray-700" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded-md" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: "w-full py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition" %>
  </div>
<% end %>

<%= render "devise/shared/links", class: "text-sm text-blue-600 hover:underline mt-4" %>
