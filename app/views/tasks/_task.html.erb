<div id="<%= dom_id task %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= task.name %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= task.status %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Comment:</strong>
    <%= task.comment %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Task list:</strong>
    <%= task.task_list_id %>
  </p>
</div>
