<% content_for :title, "Showing task" %>

<div class="md:w-2/3 w-full p-6 rounded-lg shadow-lg bg-gray-800 text-white">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl mb-6">Showing task</h1>

  <div class="p-4 bg-gray-700 rounded-lg mb-6">
    <h2 class="font-bold text-2xl mb-4"><%= @task.name %></h2>
    <p class="text-gray-300"><%= @task.comment %></p>
  </div>

  <div class="flex gap-4">
    <%= link_to "Edit this task", edit_task_list_task_path(@task_list, @task), class: "rounded-md px-4 py-2 bg-yellow-500 hover:bg-yellow-400 text-white font-medium" %>
    
    <%= link_to "Back to tasks", task_list_path(@task_list), class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>

    <%= link_to "Destroy this task", task_list_task_path(@task_list, @task), method: :delete, data: { confirm: "Are you sure?" }, class: "rounded-md px-4 py-2 bg-red-600 hover:bg-red-500 text-white font-medium" %>

  </div>
</div>
