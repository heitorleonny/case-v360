<div class="flex flex-col items-center py-12 ">
  <p class="text-lg text-gray-300 mb-8 max-w-md text-center">
    Give a name to your task list and start organizing for a more productive day.
  </p>

  <%= form_with(model: task_list, class: "w-full max-w-lg") do |form| %>
    <% if task_list.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
        <h2><%= pluralize(task_list.errors.count, "error") %> prevented the task list from being saved:</h2>
        <ul class="list-disc ml-6">
          <% task_list.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :name, class: "text-white text-sm font-semibold" %>
      <%= form.text_field :name, class: "block w-full px-4 py-3 mt-2 rounded-lg border-2 border-gray-300 focus:outline-none focus:border-blue-500" %>
    </div>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <div class="my-6">
      <%= form.submit "Create List", class: "w-full py-3 px-6 bg-blue-600 text-white rounded-lg shadow-lg hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>
