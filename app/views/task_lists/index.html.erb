<% content_for :title, "Task Lists" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6 flex-row gap-3">
    <h1 class="font-bold text-4xl text-white">Task Lists</h1>
    <%= link_to "New Task List", new_task_list_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="task_lists" class="min-w-full">
    <% if @task_lists.any? %>
      <% @task_lists.each do |task_list| %>
        <div class="mb-4 p-4 bg-gray-800 text-white rounded-lg shadow-md">
          <%= render partial: "task_list", locals: { task_list: task_list } %>
          <div class="mt-3">
            <%= link_to "View this task list", task_list, class: "ml-2 rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-white">No task lists found.</p>
    <% end %>
  </div>
</div>
